{
  "name": "cli-tool",
  "displayName": "CLI Tool",
  "description": "Command-line interface tool with Node.js, TypeScript, and best practices",
  "version": "1.0.0",
  "category": "tooling",
  "languages": ["TypeScript", "JavaScript"],
  "frameworks": ["Commander.js", "Inquirer", "Chalk"],
  "author": "Speccy-Kit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/username/{{projectName}}"
  },
  "keywords": ["cli", "command-line", "nodejs", "typescript", "tool"],
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "features": [
    "Commander.js for command parsing",
    "Interactive prompts with Inquirer",
    "Colored terminal output with Chalk",
    "Configuration management",
    "Logging and debugging",
    "Error handling and validation",
    "Help system and documentation",
    "Unit and integration testing",
    "NPM package publishing ready",
    "Cross-platform compatibility"
  ],
  "structure": {
    "src": {
      "commands": "CLI command implementations",
      "utils": "Utility functions and helpers",
      "services": "Business logic and external services",
      "config": "Configuration management",
      "types": "TypeScript type definitions",
      "templates": "Code templates and scaffolding",
      "tests": "Test files and fixtures"
    },
    "bin": "Executable CLI scripts",
    "docs": "Documentation and usage examples",
    "scripts": "Build and deployment scripts"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "inquirer": "^9.2.0",
    "chalk": "^5.3.0",
    "ora": "^7.0.0",
    "fs-extra": "^11.1.0",
    "@types/fs-extra": "^11.0.0",
    "yaml": "^2.3.0",
    "dotenv": "^16.3.0",
    "winston": "^3.10.0",
    "joi": "^17.9.0",
    "update-notifier": "^7.0.0",
    "boxen": "^7.1.0",
    "figures": "^5.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.0",
    "@types/node": "^20.0.0",
    "@types/jest": "^29.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "jest": "^29.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.0.0",
    "ts-node": "^10.9.0",
    "nodemon": "^3.0.0",
    "rimraf": "^5.0.0"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "prepack": "npm run build",
    "link": "npm link",
    "unlink": "npm unlink"
  },
  "bin": {
    "{{projectName}}": "./bin/{{projectName}}"
  },
  "configurations": {
    "commander": {
      "name": "{{projectName}}",
      "description": "{{description}}",
      "version": "{{version}}",
      "allowUnknownOption": false,
      "allowExcessArguments": false
    },
    "inquirer": {
      "theme": {
        "prefix": "❓",
        "spinner": {
          "interval": 120,
          "frames": ["⠋", "⠙", "⠹", "⠸", "⠼", "⠴", "⠦", "⠧", "⠇", "⠏"]
        }
      }
    },
    "chalk": {
      "level": 1
    },
    "winston": {
      "level": "info",
      "format": "simple",
      "defaultMeta": {
        "service": "{{projectName}}"
      }
    },
    "jest": {
      "preset": "ts-jest",
      "testEnvironment": "node",
      "roots": ["<rootDir>/src"],
      "testMatch": ["**/__tests__/**/*.ts", "**/?(*.)+(spec|test).ts"],
      "collectCoverageFrom": [
        "src/**/*.ts",
        "!src/**/*.d.ts",
        "!src/tests/**"
      ]
    }
  },
  "commands": [
    {
      "name": "init",
      "description": "Initialize a new project",
      "options": [
        {
          "flags": "-t, --template <template>",
          "description": "Project template to use"
        },
        {
          "flags": "-n, --name <name>",
          "description": "Project name"
        }
      ]
    },
    {
      "name": "create",
      "description": "Create a new resource",
      "arguments": [
        {
          "name": "type",
          "description": "Type of resource to create"
        },
        {
          "name": "name",
          "description": "Name of the resource"
        }
      ]
    },
    {
      "name": "config",
      "description": "Manage configuration",
      "subcommands": ["get", "set", "list", "reset"]
    },
    {
      "name": "version",
      "description": "Show version information"
    },
    {
      "name": "help",
      "description": "Show help information"
    }
  ],
  "templates": {
    "component": {
      "name": "Component Template",
      "description": "Create a new component",
      "files": ["component.ts", "component.test.ts"]
    },
    "service": {
      "name": "Service Template",
      "description": "Create a new service",
      "files": ["service.ts", "service.test.ts"]
    },
    "config": {
      "name": "Config Template",
      "description": "Create a configuration file",
      "files": ["config.yaml"]
    }
  },
  "configuration": {
    "file": ".{{projectName}}rc",
    "format": "yaml",
    "schema": {
      "type": "object",
      "properties": {
        "defaultTemplate": {
          "type": "string",
          "description": "Default template to use"
        },
        "outputDirectory": {
          "type": "string",
          "description": "Default output directory"
        },
        "author": {
          "type": "string",
          "description": "Default author name"
        },
        "license": {
          "type": "string",
          "description": "Default license"
        }
      }
    }
  },
  "logging": {
    "levels": ["error", "warn", "info", "debug"],
    "formats": ["simple", "json", "pretty"],
    "transports": ["console", "file"],
    "files": {
      "error": "logs/error.log",
      "combined": "logs/combined.log"
    }
  },
  "testing": {
    "unit": true,
    "integration": true,
    "coverage": {
      "threshold": {
        "global": {
          "branches": 80,
          "functions": 80,
          "lines": 80,
          "statements": 80
        }
      }
    },
    "fixtures": "src/tests/fixtures"
  },
  "publishing": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "tag": "latest",
    "files": [
      "bin/",
      "dist/",
      "README.md",
      "LICENSE"
    ]
  },
  "gitignore": [
    "# Dependencies",
    "node_modules/",
    "npm-debug.log*",
    "yarn-debug.log*",
    "yarn-error.log*",
    "",
    "# Build outputs",
    "dist/",
    "build/",
    "*.tsbuildinfo",
    "",
    "# Logs",
    "logs/",
    "*.log",
    "",
    "# Runtime data",
    "pids",
    "*.pid",
    "*.seed",
    "*.pid.lock",
    "",
    "# Coverage directory used by tools like istanbul",
    "coverage/",
    "*.lcov",
    "",
    "# nyc test coverage",
    ".nyc_output",
    "",
    "# Dependency directories",
    "node_modules/",
    "jspm_packages/",
    "",
    "# Optional npm cache directory",
    ".npm",
    "",
    "# Optional eslint cache",
    ".eslintcache",
    "",
    "# Output of 'npm pack'",
    "*.tgz",
    "",
    "# Yarn Integrity file",
    ".yarn-integrity",
    "",
    "# dotenv environment variables file",
    ".env",
    ".env.local",
    ".env.development.local",
    ".env.test.local",
    ".env.production.local",
    "",
    "# IDE",
    ".vscode/",
    ".idea/",
    "*.swp",
    "*.swo",
    "",
    "# OS",
    ".DS_Store",
    "Thumbs.db",
    "",
    "# Configuration files",
    ".{{projectName}}rc",
    ".{{projectName}}rc.json",
    ".{{projectName}}rc.yaml",
    ".{{projectName}}rc.yml",
    "",
    "# Test files",
    ".test-output/",
    "test-results/"
  ],
  "setupSteps": [
    "Install dependencies with npm install",
    "Run npm run build to compile TypeScript",
    "Run npm link to create global symlink",
    "Test CLI with {{projectName}} --help",
    "Run npm run test to verify tests",
    "Customize templates in src/templates/",
    "Update configuration in src/config/"
  ],
  "bestPractices": [
    "Use TypeScript for type safety",
    "Implement proper error handling",
    "Provide helpful error messages",
    "Use colors and formatting for better UX",
    "Implement comprehensive help system",
    "Write tests for all commands",
    "Use semantic versioning",
    "Handle configuration gracefully",
    "Provide progress feedback for long operations",
    "Support both command-line and interactive modes"
  ]
}