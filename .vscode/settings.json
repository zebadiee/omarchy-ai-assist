{
  "files.associations": {
    "*.json": "jsonc",
    "omai.js": "javascript",
    "token-tracker.js": "javascript",
    "omarchy-init.js": "javascript",
    "startup-check.js": "javascript"
  },
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },
  "terminal.integrated.defaultProfile.linux": "bash",
  "terminal.integrated.profiles.linux": {
    "bash": {
      "path": "bash",
      "icon": "terminal-bash"
    }
  },
  "tasks.version": "2.0.0",
  "python.defaultInterpreterPath": "/usr/bin/python3",
  "python.terminal.activateEnvironment": true,
  "docker.dockerComposeV2": true,
  "git.autofetch": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.js": "*.js.map, ${capture}.d.ts, ${capture}.min.js, ${capture}.test.js, ${capture}.spec.js",
    "*.json": "*.lock, ${capture}.min.json, ${capture}.test.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml",
    "*.toml": "${capture}.lock",
    "*.md": "${capture}.1.md, ${capture}.2.md, ${capture}.3.md"
  },
  "emmet.includeLanguages": {
    "javascript": "javascriptreact"
  },
  "javascript.suggest.autoImports": true,
  "typescript.suggest.autoImports": true,
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/*.code-search": true,
    "**/dist": true,
    "**/build": true,
    "**/coverage": true,
    "**/.git": true,
    "**/.omarchy": true
  },
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.omarchy/**": true
  }
}